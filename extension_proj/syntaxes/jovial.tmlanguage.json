{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Jovial",
  "scopeName": "source.jovial",
  "patterns": [
    { "include": "#defineDeclaration" },
    { "include": "#compoolDoubleQuoted" },
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "defineDeclaration": {
      "patterns": [
        {
          "name": "meta.directive.define.jovial",
          "begin": "(?i)\\b(DEFINE)\\b\\s+([A-Za-z_$][A-Za-z0-9_$']*)(?:\\s*\\(([^)]*)\\))?(?:\\s+(LISTEXP|LISTINV|LISTBOTH))?\\s*(\")",
          "beginCaptures": {
            "1": { "name": "keyword.control.directive.jovial" },
            "2": { "name": "entity.name.constant.define.jovial" },
            "3": { "name": "meta.parameter-list.define.jovial" },
            "4": { "name": "storage.modifier.list-option.jovial" },
            "5": { "name": "punctuation.definition.string.begin.jovial" }
          },
          "end": "\"",
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.jovial" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.double-quote.jovial",
              "match": "\"\""
            },
            {
              "name": "variable.parameter.define.jovial",
              "match": "!\\s*[A-Za-z]"
            }
          ]
        }
      ]
    },
    "compoolDoubleQuoted": {
      "patterns": [
        {
          "name": "meta.directive.compool.jovial",
          "begin": "(?i)(!?\\s*\\b(?:COMPOOL|ICOMPOOL)\\b(?:\\s*\\(\\s*)?)(\")",
          "beginCaptures": {
            "1": { "name": "keyword.control.directive.jovial" },
            "2": { "name": "punctuation.definition.string.begin.jovial" }
          },
          "end": "\"",
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.jovial" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.double-quote.jovial",
              "match": "\"\""
            }
          ]
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.jovial",
          "begin": "//",
          "beginCaptures": { "0": { "name": "punctuation.definition.comment.jovial" } },
          "end": "$\\n?",
          "patterns": []
        },
        {
          "name": "comment.block.c.jovial",
          "begin": "/\\*",
          "beginCaptures": { "0": { "name": "punctuation.definition.comment.jovial" } },
          "end": "\\*/",
          "endCaptures": { "0": { "name": "punctuation.definition.comment.jovial" } },
          "patterns": []
        },
        {
          "name": "comment.block.percent.jovial",
          "begin": "%",
          "beginCaptures": { "0": { "name": "punctuation.definition.comment.jovial" } },
          "end": "%",
          "endCaptures": { "0": { "name": "punctuation.definition.comment.jovial" } },
          "patterns": []
        },
        {
          "name": "comment.block.quote.jovial",
          "begin": "\"",
          "beginCaptures": { "0": { "name": "punctuation.definition.comment.jovial" } },
          "end": "\"",
          "endCaptures": { "0": { "name": "punctuation.definition.comment.jovial" } },
          "patterns": [
            {
              "name": "constant.character.escape.double-quote.jovial",
              "match": "\"\""
            }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.single.jovial",
          "begin": "'",
          "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.jovial" } },
          "end": "'",
          "endCaptures": { "0": { "name": "punctuation.definition.string.end.jovial" } },
          "patterns": [
            {
              "name": "constant.character.escape.apostrophe.jovial",
              "match": "''"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.integer.based.jovial", "match": "\\b\\d+[A-Za-z]'[^'\\n]+'\\b" },
        { "name": "constant.numeric.float.jovial", "match": "\\b(?:\\d+\\.\\d*|\\.\\d+)(?:[eE][+-]?\\d+)?\\b" },
        { "name": "constant.numeric.float.jovial", "match": "\\b\\d+(?:[eE][+-]?\\d+)\\b" },
        { "name": "constant.numeric.integer.jovial", "match": "\\b\\d+\\b" }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.jovial",
          "match": "\\b(?i:(START|TERM|BEGIN|END|IF|THEN|ELSE|WHILE|FOR|BY|CASE|DEFAULT|FALLTHRU|GOTO|RETURN|EXIT|ABORT|STOP))\\b"
        },
        {
          "name": "keyword.declaration.jovial",
          "match": "\\b(?i:(DEF|REF|PROC|ITEM|TABLE|TYPE|BLOCK|STATIC|CONSTANT|INLINE|LABEL|LIKE|OVERLAY|PARALLEL|POS|INSTANCE))\\b"
        },
        {
          "name": "keyword.control.directive.jovial",
          "match": "\\b(?i:(PROGRAM|COMPOOL|ICOMPOOL|DEFINE|ICOPY|ISKIP|IBEGIN|IEND|ILINKAGE|ITRACE|IINTERFERENCE|IREDUCIBLE|ILIST|INOLIST|IEJECT|IBASE|IISBASE|IDROP|ILEFTRIGHT|IREARRANGE|IINITIALIZE|IORDER))\\b"
        },
        {
          "name": "storage.modifier.jovial",
          "match": "\\b(?i:(RENT|REENTRANT|REC|RECURSIVE|LISTEXP|LISTINV|LISTBOTH))\\b"
        },
        {
          "name": "storage.type.builtin.jovial",
          "match": "\\b(?i:(A|B|U|S|F|C|P|W|V|STATUS))\\b"
        },
        {
          "name": "support.function.builtin.jovial",
          "match": "\\b(?i:(ABS|BIT|BITSIZE|BYTE|BYTESIZE|FIRST|LAST|LBOUND|LOC|NEXT|NWDSEN|REP|SGN|SHIFTL|SHIFTR|UBOUND|V|WORDSIZE))\\b"
        },
        {
          "name": "constant.language.boolean.jovial",
          "match": "\\b(?i:(TRUE|FALSE))\\b"
        },
        {
          "name": "keyword.operator.word.jovial",
          "match": "\\b(?i:(NOT|AND|OR|XOR|EQV|MOD))\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        { "name": "punctuation.section.conversion.begin.jovial", "match": "\\(\\*" },
        { "name": "punctuation.section.conversion.end.jovial", "match": "\\*\\)" },
        { "name": "keyword.operator.comparison.jovial", "match": "(<>|<=|>=|=|<|>)" },
        { "name": "keyword.operator.arithmetic.jovial", "match": "(\\*\\*|\\^|\\+|-|\\*|/)" },
        { "name": "keyword.operator.other.jovial", "match": "[@!]" },
        { "name": "punctuation.separator.jovial", "match": "[\\.,;:]" },
        { "name": "punctuation.section.parens.jovial", "match": "[\\(\\)]" }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.identifier.jovial",
          "match": "\\b[A-Za-z_$][A-Za-z0-9_$']*\\b"
        }
      ]
    }
  }
}
