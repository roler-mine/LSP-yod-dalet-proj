{
  "name": "jovial-lsp-client",
  "displayName": "Jovial Language Support",
  "description": "Jovial parser integration",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:jovial"
  ],
  "main": "./out/extension.js",
  "contributes": 
  {
    "configuration": {
    "properties": {
      "<ClientId>.trace.server": {
        "type": "string",
        "scope": "window",
        "enum": ["off", "messages", "verbose"],
        "default": "off",
        "description": "Trace LSP communication between client and server."
      }
    }
  },
    "languages": [{
      "id": "jovial",
      "aliases": ["Jovial", "jovial"],
      "extensions": [".j73"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "jovial",
      "scopeName": "source.jovial",
      "path": "./syntaxes/jovial.tmLanguage.json"
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^16.x",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}