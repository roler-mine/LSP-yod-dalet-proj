{
  "name": "jovial-lsp-client",
  "displayName": "Jovial Language Support",
  "description": "VS Code client for the Jovial OCaml LSP server",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": { "vscode": "^1.85.0" },
  "categories": ["Programming Languages"],
  "activationEvents": [
    "onLanguage:jovial",
    "onCommand:jovial.dumpAstUi",
    "onCommand:jovial.dumpCstUi",
    "onCommand:jovial.showSyntaxTrees",
    "onCommand:jovial.restartServer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "jovial",
        "aliases": ["Jovial", "JOVIAL", "jovial"],
        "extensions": [".jov", ".j73", ".jvl"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "jovial",
        "scopeName": "source.jovial",
        "path": "./syntaxes/jovial.tmlanguage.json"
      }
    ],
    "commands": [
      { "command": "jovial.dumpAstUi", "title": "Jovial: Dump AST" },
      { "command": "jovial.dumpCstUi", "title": "Jovial: Dump CST (Token Stream)" },
      { "command": "jovial.showSyntaxTrees", "title": "Jovial: Show AST/CST Viewer" },
      { "command": "jovial.restartServer", "title": "Jovial: Restart Language Server" }
    ],
    "configuration": {
      "title": "Jovial LSP",
      "properties": {
        "jovial.server.path": {
          "type": "string",
          "default": "",
          "description": "Path to Jovial LSP server executable. Leave empty to use bundled server from the VSIX."
        },
        "jovial.server.args": {
          "type": "array",
          "default": [],
          "items": { "type": "string" },
          "description": "Extra command-line args passed to the server."
        },
        "jovial.trace": {
          "type": "string",
          "default": "off",
          "enum": ["off", "messages", "verbose"],
          "description": "Trace LSP traffic in the client output channel."
        },
        "jovial.lsif.fastPath": {
          "type": "boolean",
          "default": true,
          "description": "Use LSIF-like workspace index cache for definition/implementation/references when targets are in non-open files."
        },
        "jovial.autostart": {
          "type": "boolean",
          "default": true,
          "description": "Start the language server automatically when a Jovial file is opened."
        }
      }
    }
  },
  "scripts": {
    "build:server": "node ./scripts/build-server.js",
    "compile": "tsc -p .",
    "watch": "tsc -p . -w",
    "vscode:prepublish": "npm run build:server && npm run compile",
    "package:vsix": "npx @vscode/vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.0.0"
  }
}
